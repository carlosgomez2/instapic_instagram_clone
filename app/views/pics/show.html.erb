<div class="pic-box-center">

  <div class="pic-box">
    <div class="main-wrapper-pic">
      <div class="pic-left">
        <%= image_tag @pic.image.url(:medium), class: "pic" %>
      </div>
      <div class="pic-right">
        <div class="desc-wrapper">
          <p class="pic-title"><%= @pic.title %></p>
          <p class="pic-by">by <%= @pic.user.email %></p>
          <p class="pic-description"><%= @pic.description %></p>
        </div>
        <% if user_signed_in? %>
          <div class="pic-btn">
            <%= link_to "Edit", edit_pic_path, class: "pic-btn-item pure-button" %>
            <%= link_to "Delete", pic_path, method: :delete, data: { confirm: "Are you sure?" }, class: "pic-btn-item pure-button" %>
          </div>
        <% end %>
      </div>
    </div>

  </div>

</div>
