<div class="pic-box-center">

  <div class="box">
    <div class="pic-box">
      <div class="pic-left">
        <%= image_tag @pic.image.url(:medium), class: "pic" %>
      </div>
      <div class="pic-rigth">
        <div class="desc-wrapper">
          <p class="pic-title"><%= @pic.title %></p>
          <p class="pic-by">by <%= @pic.user.email %></p>
          <p class="pic-description"><%= @pic.description %></p>
        </div>
        <div class="pic-btn">
          <%= link_to like_pic_path(@pic), method: :put, class: "pic-btn-item pure-button pure-button-success" do %>
            <span>like</span>
            <%= @pic.get_upvotes.size %>
          <% end %>
          <% if user_signed_in? %>
            <%= link_to "Edit", edit_pic_path, class: "pic-btn-item pure-button pure-button-warning" %>
            <%= link_to "Delete", pic_path, method: :delete, data: { confirm: "Are you sure?" }, class: "pic-btn-item pure-button pure-button-error" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

</div>
